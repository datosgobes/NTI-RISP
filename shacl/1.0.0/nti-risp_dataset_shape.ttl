    rdf:type owl:Ontology ;
    rdfs:label "Restricciones para los conjuntos de datos NTI-RISP (2013)"@es ;
    rdfs:label "Datasets restrictions for NTI-RISP (2013)"@en ;
    dcat:downloadURL <https://datosgobes.github.io/NTI-RISP/releases/1.0.0/shacl/shacl_distribution_shape.ttl> ;
    dct:format <http://publications.europa.eu/resource/authority/file-type/RDF_TURTLE> ;
    dct:conformsTo <https://www.w3.org/TR/shacl> ;
    dct:description "Este archivo incluye las restricciones SHACL para las propiedades y clases relacionadas con conjuntos de datos en el perfil de aplicación NTI-RISP (2013)."@es ;
    dct:description "This file includes SHACL restrictions for properties and classes related to datasets in the NTI-RISP application profile (2013)."@en ;
    owl:versionInfo "1.0.0" ;
    dct:modified "2024-10-17"^^xsd:date ;
    dct:publisher <http://datos.gob.es/recurso/sector-publico/org/Organismo/E0DAT0001> ;
    cc:attributionURL <https://datos.gob.es/> ;
    dcatap:availability <http://data.europa.eu/r5r/stable> ;
    foaf:homepage <https://datosgobes.github.io/NTI-RISP/> ;
    rdfs:seeAlso <https://datosgobes.github.io/NTI-RISP/#Dataset> ;
    rdfs:comment """
        Este archivo requiere importar las siguientes dependencias adicionales para funcionar correctamente:
        - shacl_common_shapes.ttl
        - shacl_mdr-vocabularies.shape.ttl
        Asegúrese de que estén disponibles e importadas para una validación completa.
    """@es ;
    rdfs:comment """
        This file requires importing the following additional dependencies to work properly:
        - shacl_common_shapes.ttl
        - shacl_mdr-vocabularies.shape.ttl
        Make sure they are available and imported for full validation.
    """@en .

ntirisp:Dataset_Shape
    a sh:NodeShape ;
    sh:name "Dataset"@en ;
    sh:property 
    # dct:title (Obligatorio, 1..n)
    [
        sh:path dct:title ;
        sh:minCount 1 ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedValueShape [
            sh:languageIn ("es") ;
            sh:nodeKind sh:Literal ;
            sh:datatype rdf:langString ;
        ] ;
        sh:message "Debe haber al menos un título en español"@es ;
    ],
    [
        sh:path dct:title ;
        sh:node ntirisp:MultilingualText_Shape ;
        sh:message "Cada título debe ser un literal con etiqueta de idioma válida"@es ;
    ],

    # dct:description (Obligatorio, 1..n)
    [
        sh:path dct:description ;
        sh:minCount 1 ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedValueShape [
            sh:languageIn ("es") ;
            sh:nodeKind sh:Literal ;
            sh:datatype rdf:langString ;
        ] ;
        sh:message "Debe haber al menos una descripción en español"@es ;
    ],
    [
        sh:path dct:description ;
        sh:node ntirisp:MultilingualText_Shape ;
        sh:message "Cada descripción debe ser un literal con etiqueta de idioma válida"@es ;
    ],
    
    # dcat:theme (Obligatorio, 1..n)
    [
        sh:path dcat:theme ;
        sh:minCount 1 ;
        sh:message "Se debe usar al menos un tema del vocabulario http://datos.gob.es/kos/sector-publico/sector"@es ;
        sh:severity sh:Violation ;
    ],
    [
        sh:path dcat:theme ;
        sh:nodeKind sh:IRI ;
        sh:node ntirisp:NTISectorThemeRestriction ;
        sh:message "El valor debe ser un IRI que pertenezca a los sectores primarios definidos en NTI-RISP http://datos.gob.es/kos/sector-publico/sector"@es ;
        sh:severity sh:Violation ;
    ],
    
    # dcat:keyword (Recomendado, 0..n)
    [
        sh:path dcat:keyword ;
        sh:minCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:message "Se recomienda incluir una etiqueta alfanumérica compacta"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dcat:keyword ;
        sh:node ntirisp:MultilingualText_Shape ;
        sh:message "Cada palabra clave debe ser un literal con etiqueta de idioma válida"@es ;
    ],
    
    # dct:identifier (Recomendado, 0..1)
    [
        sh:path dct:identifier ;
        sh:minCount 1 ;
        sh:message "Se recomienda incluir un identificador URI para el conjunto de datos"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:identifier ;
        sh:maxCount 1 ;
        sh:or (
            # Caso 1: Literal con valor URI
            [
                sh:nodeKind sh:Literal ;
                sh:pattern "^https?://.*$" ;
                sh:message "Si es un literal, debe tener forma de URL válida (http:// o https://)"@es ;
            ]
            # Caso 2: Referencia a un recurso URI
            [
                sh:nodeKind sh:IRI ;
                sh:pattern "^https?://.*$" ;
                sh:message "Si es un IRI, debe ser una URL válida (http:// o https://)"@es ;
            ]
        ) ;
        sh:message "El valor de dct:identifier debe ser un identificador URI válido, ya sea como literal o como referencia a recurso"@es ;
        sh:severity sh:Violation ;
    ],
    
    # dct:issued (Recomendado, 0..1)
    [
        sh:path dct:issued ;
        sh:minCount 1 ;
        sh:message "Se recomienda incluir la fecha de creación del recurso con formato ISO-8601: YYYY-MM-DDThh:mm:ssTZD"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:issued ;
        sh:maxCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:node ntirisp:DateOrDateTimeDataType_Shape ;
        sh:message "La fecha de creación del dataset debe ser una fecha válida en formato ISO-8601: YYYY-MM-DDThh:mm:ssTZD"@es ;
        sh:severity sh:Violation ;
    ],
    
    # dct:modified (Recomendado, 0..1)
    [
        sh:path dct:modified ;
        sh:minCount 1 ;
        sh:message "Se recomienda incluir la fecha de última actualización del recurso con formato ISO-8601: YYYY-MM-DDThh:mm:ssTZD"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:modified ;
        sh:maxCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:node ntirisp:DateOrDateTimeDataType_Shape ;
        sh:message "La fecha de última modificación del dataset debe ser una fecha válida en formato ISO-8601: YYYY-MM-DDThh:mm:ssTZD"@es ;
        sh:severity sh:Violation ;
    ],
    
    # dct:accrualPeriodicity (Recomendado, 0..1)
    [
        sh:path dct:accrualPeriodicity ;
        sh:minCount 1 ;
        sh:message "Se recomienda especificar periodos normalizados con formato ISO8601 (P<date>T<time>)"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:accrualPeriodicity ;
        sh:maxCount 1 ;

        # Estructura compleja con dct:Frequency
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:class dct:Frequency ;
        sh:node ntirisp:Frequency_Shape ;
        sh:message "La estructura dct:Frequency no cumple con los requisitos https://datosgobes.github.io/NTI-RISP/#Dataset"@es ;
    ],
    
    # dc:language (Obligatorio, 1..n)
    [
        sh:path dc:language ;
        sh:minCount 1 ;
        sh:node ntirisp:LanguageRestriction_Shape ;
        sh:message "El conjunto de datos debe estar disponible en al menos un idioma"@es ;
        sh:severity sh:Violation ;
    ],
    
    # dct:publisher (Obligatorio, 1..1)
    [
        sh:path dct:publisher ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:severity sh:Violation ;
    ],
    [
        sh:path dct:publisher ;
        sh:node ntirisp:DIR3OrganismRestriction ;
        sh:message "El valor debe ser un IRI del directorio de organismos DIR3 con formato http://datos.gob.es/recurso/sector-publico/org/Organismo/{ID}, donde ID es un código alfanumérico de 9 caracteres que puede comenzar con E (Administración General del Estado), A (Administración Autonómica), L (Administración Local), P (Entidades privadas), U (Universidades), etc."@es ;
        sh:severity sh:Violation ;
    ],
    
    # dct:license (Recomendado, 0..1)
    [
        sh:path dct:license ;
        sh:minCount 1 ;
        sh:message "Se recomienda incluir una URI con la licencia para el conjunto de datos"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:license ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
        sh:severity sh:Violation ;
    ],
    
    # dct:spatial (Recomendado, 0..n)
    [
        sh:path dct:spatial ;
        sh:minCount 1 ;
        sh:message "Se recomienda indicar la cobertura geográfica del conjunto de datos usando un IRI del vocabulario de territorio NTI-RISP http://datos.gob.es/recurso/sector-publico/territorio"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:spatial ;
        sh:nodeKind sh:IRI ;
        sh:node ntirisp:TerritoryRestriction ;
        sh:message "El valor debe ser un IRI del vocabulario de territorio NTI-RISP http://datos.gob.es/recurso/sector-publico/territorio."@es ;
        sh:severity sh:Violation ;
    ],
    
    # dct:temporal (Recomendado, 0..n)
    [
        sh:path dct:temporal ;
        sh:minCount 1 ;
        sh:message "Se recomienda describir un periodo de tiempo que puede ser definido mediante la ontología de Tiempo del W3C: time"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:temporal ;
        sh:class dct:PeriodOfTime ;
        sh:node ntirisp:PeriodOfTime_Shape ;
        sh:message "El período temporal debe seguir las especificaciones de dct:PeriodOfTime"@es ;
    ],
    
    # dct:valid (Recomendado, 0..1)
    [
        sh:path dct:valid ;
        sh:minCount 1 ;
        sh:message "Se recomienda indicar la fecha de vigencia del recurso con formato ISO8601: YYYY-MM-DD (xsd:date)"@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:valid ;
        sh:maxCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:pattern "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" ; # Formato YYYY-MM-DD
        sh:severity sh:Violation ;
    ],
    
    # dct:references (Recomendado, 0..n)
    [
        sh:path dct:references ;
        sh:minCount 1 ;
        sh:message "Se recomienda indicar la(s) URI(s) que identifica(n) al recurso relacionado."@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:references ;
        sh:nodeKind sh:IRI ;
        sh:severity sh:Violation ;
    ],
    
    # dct:conformsTo (Recomendado, 0..n)
    [
        sh:path dct:conformsTo ;
        sh:minCount 1 ;
        sh:message "Se recomienda indicar la(s) URI(s) que identifica(n) al documento legal relacionado con el recurso."@es ;
        sh:severity sh:Warning ;
    ],
    [
        sh:path dct:conformsTo ;
        sh:nodeKind sh:IRI ;
        sh:severity sh:Violation ;
    ],
    
    # dcat:distribution (Obligatorio, 1..n)
    [
        sh:path dcat:distribution ;
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
        sh:message "Se debe incluir al menos una distribución para el conjunto de datos"@es ;
        sh:severity sh:Violation ;
    ];
    
    sh:targetClass dcat:Dataset .
